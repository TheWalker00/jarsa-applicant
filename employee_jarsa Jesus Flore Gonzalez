Create Database employee_employee;

use employee_employee;

Create table employee
(
  id serial,
  first_name text,
  last_name text
  primary key(id)
);

CREATE TABLE employee_department
(
  id serial,
  name text,
  description text
  employee_id smallint,
  primary key(id)
);

INSERT INTO employee(first_name, last_name) values('Hector', 'Enriquez');
